@{
    ViewData["Title"] = "Elanın xüsusiyyətləri";
  
}
@model AdvertisementDetailVM
@{ 
    bool isnew = Model.Details.IsNew;
}
<section class="top-page">

    <div class="container">

        <div class="detailed-top  ">
            <div class="all-top-page">

                <div class="left-page">
                    <h1>Ətraflı məlumat</h1>
                </div>
                <div class="right-page d-flex">
                    <a href="Home Page.html">
                        Ana səhfə
                    </a>
                    <span>/</span>
                    <a href="Search Page.html">
                        Alış-veriş
                    </a>
                    <span>
                        / Məhsullar haqqında ətraflı məlumat
                    </span>

                </div>
            </div>

        </div>

    </div>

</section>
<section class="all-detail pb-5">
    <div class="top-det">
        <h3 style="height: 40px; background-color: #3b3b3b; color: #fff; width: 100%;">@Model.Advertisement.AdvertName</h3>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-12 col-md-5">

                <div class="main-det-photo">
                    @foreach (var picture in Model.Advertisement.AdvertisementPictures)
                    {
                        <div class="detail-photo">
                            <img src="~/Img/@picture.Picture.URL" alt="">
                        </div>
                    }

                </div>

                <div class="bottom-det-photo">
                    @foreach (var picture in Model.Advertisement.AdvertisementPictures)
                    {
                        <div class="detail-photo">
                            <img src="~/Img/@picture.Picture.URL " alt="">
                        </div>
                    }



                </div>
              
                
            </div>
            <div class="col-lg-7 col-sm-12 col-md-7">
                <div class="details">
                    <h3 class="bottom-det">@Model.Advertisement.AdvertName</h3>
                    <span>
                        Elan sahibi:
                        <a href="#">@Model.Advertisement.AdvHost</a>
                      </span>
                    <div class="rank-review d-flex mt-1 mb-4">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star pr-5"></i>
                        <div class="review">
                            <i class="com fas fa-comment-dots"></i>

                            <a href="#">
                                Şərhləri oxuyun
                            </a>

                        </div>
                    </div>
                    <h2>@Model.Advertisement.Price ₼</h2>
                    <p>
                        @Model.Details.Description
                    </p>
                    <hr>
                    <div class="info-detail pt-2 pb-2">
                        <div class="inf d-flex">
                            <i class="fas fa-truck"></i>
                            <h6>Çatdırılma elan sahibi tərəfindən pulsuzdur.</h6>
                        </div>
                        <div class="inf d-flex">
                            <i class="fas fa-exchange-alt pr-2"></i>

                            <h6>Məhsul 14 gün ərzində geri qaytarıla bilər.</h6>

                        </div>
                        <hr>
                        <div class="info-add">
                            <a style="color:black;font-size:18px;">Baxış sayı: </a>
                            

                            <br>
                            <span>Elanın nömrəsi: @Model.Advertisement.ID</span>
                            <br>
                            <span>Paylaşılma tarixi: @Model.Advertisement.Posttime.ToShortDateString()</span>
                        </div>
                    </div>
                    <hr>
                    <div class="add-cart-detail ">

                        <i class="call fas fa-phone "></i> <span class="pl-1 mr-5">@Model.Details.HostNumber</span>
                        <i class=" u fab fa-instagram pr-1"><a class="pl-1" href="#">@Model.Advertisement.AdvHost</a></i> <br>
                        <i class="fab fa-whatsapp  pr-1 pb-4"></i> <span class="pr-5">@Model.Details.HostWhatsapp</span>
                        <span>(@Model.Details.HostName)</span><br>
                        <i class="fas fa-map-marked-alt"></i> <span style="font-size: 17px;">@Model.Details.HostAdress</span>

                        <iframe class="pt-3 pb-3" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194538.06757453884!2d49.64112998832671!3d40.372122422392906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40308763c2127445%3A0xf783d6107dfdb2b!2zRW1iYXdvb2QgxLBuxZ9hYXTDp8SxbGFyIG1hxJ9hemFzxLE!5e0!3m2!1sen!2s!4v1618416965452!5m2!1sen!2s" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

                    </div>
                </div>

            </div>
            <div class="bottom-detail">
                <div class="bottom-top">
                    <ul class="p-0 m-0">
                        <li class="mel">Məhsulun xüsusiyyətləri</li>
                        <li class="xus">Əlavə Məlumat</li>
                    </ul>
                </div>
                <div class="bottom-window">
                    <div class="bottom-desc">
                        <p>
                            @Model.Details.AdInfo
                        </p>

                    </div>
                    <div class="bottom-info">
                        <ul>
                            <li>
                                Eni:
                                <p>@Model.Details.Width sm</p>
                            </li>
                            <li>
                                Uzunluğu:<p>@Model.Details.Lenght sm</p>
                            </li>
                            <li>
                                Hündürlüyü:<p>@Model.Details.Height sm</p>
                            </li>
                            <li>
                                Dərinlik:
                                <p>@Model.Details.Depth sm</p>
                            </li>
                            <li>
                                Material:<p>@Model.Details.Material</p>
                            </li>
                            <li>
                                Vəziyyət:

                                @if (isnew==true){
                                    <p>Yeni</p>
                                }
                                else
                                {
                                    <p>Işlənmiş</p>
                                }

                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<section class="recommended-product">
    <div class="container">
        <h1>Oxşar elanlar</h1>
        <div class="recommended-adv">
            @foreach (var feat in Model.FeaturedAdvert)
            {
                <div class="adv-frame">
                    <a href="/advertisement/details/@feat.ID">

                        <div class="adv-photo">
                            <img src="~/img/@feat.AdvertisementPictures[0].Picture.URL" alt="">
                            <img class="sec-photo" src="~/img/@feat.AdvertisementPictures[1].Picture.URL" alt="">
                        </div>

                        <div class="adv-desc">
                            <h5>
                                @feat.AdvertName
                            </h5>
                            <span>
                                İstehsalçı :
                                <a href="#">@feat.AdvHost</a>
                            </span><br>
                            <p>@feat.Posttime , Bakı</p>
                        </div>
                    </a>

                </div>

            }

        </div>

    </div>
    </div>

</section>
<section class="Marka-slider">
    <div class="mmm">
        @foreach (var brand in Model.Brands)
        {
            <div class="mark">
                <div class="col-3">
                    <a href="#"></a>
                    <img src="~/Img/@brand.BrandURL" alt="">

                </div>
            </div>
        }
    </div>

</section>



